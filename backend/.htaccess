<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /diplomski/backend/
    
    # Allow direct access to files that exist
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Redirect everything else to index.php
    RewriteRule ^ index.php [L]
</IfModule>

<IfModule mod_env.c>
    # Stripe test keys (set values locally; do not commit secrets)
    SetEnv STRIPE_PUBLISHABLE_KEY ""
    SetEnv STRIPE_SECRET_KEY ""
</IfModule>

<Files ".htaccess">
    Require all granted
</Files>
